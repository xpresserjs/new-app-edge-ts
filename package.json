{
  "name": "new-app-ts",
  "version": "1.0.1",
  "description": "Xpresser Typescript App Boilerplate using Edge.js Template Engine.",
  "main": "app.ts",
  "repository": "https://github.com/xpresserjs/new-app-ts",
  "author": "xpresserjs",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "npx xjs @stack tsc",
    "dev": "npx tsx watch app.ts",
    "start": "npm run build && node build/app.js",
    "ts:watch": "npx tsc --watch",
    "dev:node": "npx nodemon build/app.js"
  },
  "dependencies": {
    "express-edge": "^3.0.0",
    "xpresser": "^0.32.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "tsx": "^4.10.3",
    "typescript": "^5.4.5",
    "xjs-cli": "^1.3.5"
  }
}
